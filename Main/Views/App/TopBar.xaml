<UserControl x:Class="Main.Views.App.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Main.Views.App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="20">
    <Grid MaxHeight="20">
        <Menu x:Name="MainMenu">
            <MenuItem x:Name="FileMenu" Header="File">
                <MenuItem x:Name="FileMenu_Open" Header="Open"/>
                <MenuItem x:Name="FileMenu_Create" Header="Create New"/>
            </MenuItem>
            <MenuItem x:Name="OptionsMenu" Header="Options"/>
            <MenuItem x:Name="ViewMenu" Header="View"/>
            <MenuItem x:Name="AboutMenu" Header="About"/>
        </Menu>
    </Grid>
</UserControl>
